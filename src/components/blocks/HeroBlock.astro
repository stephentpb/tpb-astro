---
import { urlFor } from '../../lib/sanityImage'

const { block } = Astro.props;
---

<section class="relative bg-gray-100">
  {block.backgroundImage && (
    <img
      src={urlFor(block.backgroundImage).width(2000).url()}
      class="w-full h-64 object-cover"
      alt=""
    />
  )}

  <div class="absolute inset-0 flex flex-col md:flex-row items-center justify-center p-4">
    <div class="text-center md:text-left bg-white/80 p-4 rounded">
      <h1 class="text-4xl font-bold">{block.heading}</h1>
      <p>{block.subheading}</p>
    </div>

    {block.floatingImage && (
      <img
        src={urlFor(block.floatingImage).width(400).height(400).url()}
        class="md:ml-6 w-48 h-48 object-cover rounded shadow"
        alt=""
      />
    )}
  </div>
</section>
